<p id="notice"><%= notice %></p>

<div class="nav justify-content-center"> 
  <h1>Cardápio</h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.description %></td>
        <td><%= link_to 'Visualizar', menu %></td>
        <td><%= link_to 'Editar', edit_menu_path(menu) %></td>
        <td><%= link_to 'Excluir', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="nav justify-content-center"> 
  <%= link_to 'Novo cardápio', new_menu_path,class:"btn btn-light" %>
</div>
